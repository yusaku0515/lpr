<div class="container">

<h4>ユーザー情報編集</h4>

<%= form_for(@user) do |f| %>
<!-- エラー文表示 -->
<% if @user.errors.any? %>
	<div id="error_explanation">
		<h2><%= @user.errors.count %>errors prohibited this obj from being saved:</h2>
		<ul>
			<% @user.errors.full_messages.each do |message| %>
				<li><%= message %></li>
			<% end %>
		</ul>
	</div>
<% end %>

<% if @user.user_status == true %>

<!-- 一般ユーザーの情報編集 -->
<div class="row">
	<div class="form-group">
		<p class="col-lg-2">名前</p>
		<div class="col-lg-4" style="padding-bottom: 10px;">
			<%= f.text_field :family_name, placeholder:"性" %><br />
			<%= f.text_field :first_name, placeholder:"名" %>
		</div>
	</div>
</div>

<div class="row">
	<div class="form-group">
		<p class="col-lg-2">年齢</p>
		<div class="col-lg-4" style="padding-bottom: 10px;">
			<%= f.text_field :age %>
		</div>
	</div>
</div>

<div class="row">
	<div class="form-group">
		<p class="col-lg-2">メールアドレス</p>
		<div class="col-lg-4" style="padding-bottom: 10px;">
			<%= f.email_field :email %>
		</div>
	</div>
</div>

<div class="row">
	<div class="form-group">
		<p class="col-lg-2">アイコン画像</p>
		<div class="col-lg-4" style="padding-bottom: 10px;">
			<%= f.attachment_field :icon_image %>
		</div>
	</div>
</div>

<div class="row">
	<div class="form-group">
		<p class="col-lg-2">自己紹介文</p>
		<div class="col-lg-4" style="padding-bottom: 10px;">
			<%= f.text_area :introduction %><br>
		</div>
	</div>
</div>


<% elsif @user.user_status == false %>

<!-- 法人ユーザーの情報編集 -->
<div class="row">
	<div class="form-group">
		<p class="col-lg-2">企業名・団体名</p>
		<div class="col-lg-4" style="padding-bottom: 10px;">
			<%= f.text_field :company_name, placeholder:"company_name" %>
		</div>
	</div>
</div>

<div class="row">
	<div class="form-group">
		<p class="col-lg-2">郵便番号</p>
		<div class="col-lg-4" style="padding-bottom: 10px;">
			<%= f.text_field :postal_code, placeholder:"postal_code" %>
		</div>
	</div>
</div>

<div class="row">
	<div class="form-group">
		<p class="col-lg-2">住所</p>
		<div class="col-lg-4" style="padding-bottom: 10px;">
			<%= f.text_field :address, placeholder:"address" %>
		</div>
	</div>
</div>

<div class="row">
	<div class="form-group">
		<p class="col-lg-2">電話番号</p>
		<div class="col-lg-4" style="padding-bottom: 10px;">
			<%= f.text_field :phone_number, placeholder:"phone_number" %>
		</div>
	</div>
</div>

<div class="row">
	<div class="form-group">
		<p class="col-lg-2">ホームページURL</p>
		<div class="col-lg-4" style="padding-bottom: 10px;">
			<%= f.text_field :hp_url, placeholder:"hp_url" %>
		</div>
	</div>
</div>

<div class="row">
	<div class="form-group">
		<p class="col-lg-2">アイコン画像</p>
		<div class="col-lg-4" style="padding-bottom: 10px;">
			<%= f.attachment_field :icon_image %>
		</div>
	</div>
</div>

<div class="row">
	<div class="form-group">
		<p class="col-lg-2">自己紹介文</p>
		<div class="col-lg-4" style="padding-bottom: 10px;">
			<%= f.text_area :introduction %><br>
		</div>
	</div>
</div>

<% end %>

<%= f.submit "変更内容を保存する" %>

<% end %>
<button><%= link_to "退会する", users_leave_path(current_user.id), :style=>"color:white; text-decoration: none;" %></button>

</div>
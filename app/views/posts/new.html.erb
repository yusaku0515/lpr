<div class="container">
<h1>新規投稿</h1>
<!-- form_for部分 -->
<%= form_for(@post, url: posts_path) do |f| %>

    <h4>タイトル</h4>
    <%= f.text_field :title %>

    <h4>本文</h4>
    <%= f.text_area :post_text %>

<!--     <h4>都道府県</h4> -->
	<%#= f.select :area_name, Local.area_names.keys.map {|k| [I18n.t("enums.local.area_name.#{k}"), k]} %>

	<h4>画像</h4>
	<%= f.file_field :post_images, multiple: true %>


    <%= f.submit '投稿' %>

<% end %>
</div>